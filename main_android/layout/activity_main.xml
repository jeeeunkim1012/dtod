<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/scrollView4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2000dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="0dp">

            <VideoView
                android:id="@+id/wineVideo"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="원하는 분위기"
                android:textColor="#E72D5A"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/emotionalImg"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/emotional" />

                <ImageView
                    android:id="@+id/summerImg"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/summer" />

                <ImageView
                    android:id="@+id/solitudeImg"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/solitude" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/emotionalText"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="18dp"
                    android:text="감성적인 분위기"
                    android:textColor="#FCD9D7"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/summerText"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:text="여름 분위기"
                    android:textColor="#FCD9D7"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/solitudeText"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="13dp"
                    android:text="고독한 분위기"
                    android:textColor="#FCD9D7"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/black"
                android:orientation="vertical" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="자주 찾게되는 조합"
                    android:textColor="#E72D5A"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="와인과 영화"
                    android:textColor="#FCD9D7"
                    android:textSize="16dp" />

                <LinearLayout
                    android:layout_width="370dp"
                    android:layout_height="170dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/rounded_bg"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="0dp"
                        android:layout_height="130dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/movie1" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="12dp"
                        android:layout_weight="1"
                        android:text="영국런던에서 굉장히 바쁘게 살던\n주인공 맥스가 갑자기 포도밭을\n물려받게 되면서
일어나는 일들에 대한\n영화이다.
엄청나게 흥미진진하게\n긴박한 영화는 아니지만\n은은하게 로맨스도 있고\n와인도 나오는 영화로
스파클링 와인\n드미섹, 떼땡저와 잘 어울린다. "
                        android:textColor="#0F1A25"
                        android:textSize="13dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="맥주와 영화"
                    android:textColor="#FCD9D7"
                    android:textSize="16dp" />

                <LinearLayout
                    android:layout_width="370dp"
                    android:layout_height="170dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/rounded_bg"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="12dp"
                        android:layout_weight="1"
                        android:text="   기쿠지로의 여름은 전체적으로 파란만장\n   한 여름 방학 여행을 그린 영화이다.\n
  이 영화는 유쾌하고 웃음이 가득한 장면\n   들로 되어있다.
또한 일본의 아름다운 \n   풍경과 문화를 감상할 수 있는 장면들\n   도 많이 포함되어 있어
이 영화의 청량함\n   과 일본의 대표적인 생맥주인 \n   나마비루와 잘어울립니다."
                        android:textColor="#0F1A25"
                        android:textSize="13dp" />

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="0dp"
                        android:layout_height="130dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/movie2" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="위스키와 영화"
                    android:textColor="#FCD9D7"
                    android:textSize="16dp" />

                <LinearLayout
                    android:layout_width="370dp"
                    android:layout_height="170dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/rounded_bg"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="0dp"
                        android:layout_height="130dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/movie4" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:text="마틸다는 어머니의 갑작스러운 죽음의 \n비밀을 파헤치기 위해
시골마을에\n 찾아가고, 그곳에서 한 여자 아이의 실종 사건을 접하게 되었고
이 모든 사건의\n배후에는 악마를 숭배하는 컬트 집단에\n있다는 내용인
ott 드라마 레퀴엠은 \n위스키 피츠 비스트와 잘어울린다. "
                        android:textColor="#0F1A25"
                        android:textSize="13dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginBottom="20dp"
                android:background="@color/black"
                android:orientation="vertical" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="13dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:text="술결 : 기획전"
                    android:textColor="#E72D5A"
                    android:textSize="18dp" />

            </LinearLayout>

            <GridView
                android:id="@+id/gridview1"
                android:layout_width="match_parent"
                android:layout_height="780dp"
                android:background="@color/background"
                android:gravity="center"
                android:numColumns="2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginBottom="20dp"
                android:background="@color/black"
                android:orientation="vertical" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginBottom="20dp"
                android:text="술결 베스트 후기"
                android:textColor="#E72D5A"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="370dp"
                android:layout_height="190dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rounded_bg"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="163dp"
                        android:layout_height="146dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/alcohol4" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="19dp"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1"
                            android:textColor="#0F1A25"
                            android:text="사이트를 돌아다니다가 우연히 발견한 소마와 비앙코의 조합은 정말 최고예요. " />

                        <TextView
                            android:id="@+id/textView17"
                            android:layout_width="wrap_content"
                            android:layout_height="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="185dp"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1"
                            android:textColor="#0F1A25"
                            android:text="2023.11.03 " />

                        <Button
                            android:id="@+id/button"
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="180dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginBottom="15dp"
                            android:layout_weight="1"
                            android:background="@drawable/mainbtn_round"
                            android:text="더보기"
                            android:textColor="#50B7CD"
                            android:textSize="10dp"
                            app:backgroundTint="#0F1A25" />


                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/black"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:text="술결 : 술마실 결심"
                    android:textColor="#FCD9D7"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:text="술결 이벤트 혹은 이용 관련 문의\n\n문의하기\n이메일 : DtoD@gmail.com\n전화 : 02-3667-0008\n\n술결 : 팀 프로젝트 김지은 채승병 김수진 김용학 정주이\n본 애플리케이션은 상업적 목적이 없는 프로젝트 목적으로 제작된 것으로 \n사이트 관련 문의는
위의 메일로 연락 주시기 바랍니다."
                    android:textColor="#ffffff"
                    android:textSize="10dp" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>